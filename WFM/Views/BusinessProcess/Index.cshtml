@model IEnumerable<WFM.Models.DTO.BusinessProcess>

@{
    ViewData["Title"] = "Список бизнес-процессов";
}

<div class="row">
    <div class="col-md-12">
        <p>
            <a asp-action="Create">Создать описание бизнес-процесса</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>