
@{
    ViewData["Title"] = "Запуск бизнес-процесса";
}

<h4>Запуск бизнес-процесса</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Name" class="control-label"></label>
                <input name="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Id" class="control-label"></label>
                <select name="Id" asp-items="ViewBag.BusinessProcesses" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Запустить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
